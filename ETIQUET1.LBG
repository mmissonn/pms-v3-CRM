PARAMETER ll_sample
*-- Initialisation des variables d'impression (uniquement pour cette proc‚dure)
PRIVATE _peject, _wrap

*-- Test si fin de fichier
IF EOF()
   RETURN
ENDIF

IF SET("TALK")="ON"
   SET TALK OFF
   gc_talk="ON"
ELSE
   gc_talk="OFF"
ENDIF
gc_space = SET("SPACE")
SET SPACE OFF
gc_time=TIME()      && Heure systŠme pour les champs pr‚-d‚finis
