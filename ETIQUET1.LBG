gn_column=1
gn_element=0
gn_line=1
gn_memowid=SET("MEMOWIDTH")
SET MEMOWIDTH TO 254
gn_page=_pageno     && Num‚ro de page pour les impressions multiples
_plineno=0
_wrap = .F.

*-- Initialisation de l'environnement
ON ESCAPE DO Prnabort

DECLARE gn_line2[1]

PRINTJOB

*-- Initialisation des variables calcul‚es
nam=""
adress=""
laville=""
c_p=""

*-- Initialisation du num‚ro de page pour les impressions multiples
_pageno=gn_page

IF ll_sample
   DO Sample
   IF LASTKEY() = 27
      RETURN
   ENDIF
ENDIF

DO WHILE FOUND() .AND. .NOT. EOF() .AND. gl_prntflg
   nam=ltrim(nom)
   adress=ltrim(adresse)
   laville=ltrim(ville)
   c_p=ltrim(code_post)

   gn_line=0
   *-- Recherche des lignes contenant un champ vide
   DO Chk4null WITH 0, 4, 4

   DO WHILE gn_line < 6
      ?
      gn_line=gn_line+1
   ENDDO
   CONTINUE
ENDDO

IF .NOT. gl_prntflg
   SET MEMOWIDTH TO gn_memowid
   SET SPACE &gc_space.
   SET TALK &gc_talk.
   ON ESCAPE
   RETURN
ENDIF


ENDPRINTJOB


SET MEMOWIDTH TO gn_memowid
SET SPACE &gc_space.
SET TALK &gc_talk.
ON ESCAPE
RETURN
